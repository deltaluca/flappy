<?xml version="1.0" encoding="utf-8"?>

<project>
	<app title="Flaplomacy" main="Main" package="flappy" version="1.0.0" company="Flappy IC"/>
  
	<set name="fullscreen" if="target_webos"/>
	<set name="fullscreen" if="target_ios"/>
	<set name="fullscreen" if="target_android"/>

	<window width="1024" height="768" fps="60" orientation="landscape" hardware="false"/>
	<window width="0" height="0" if="fullscreen"/>

	<set name="BUILD_DIR" value="/vol/bitbucket/ld509/cpp" if="uni"/>
	<set name="BUILD_DIR" value="Export" unless="uni"/>

	<set name="SWF_VERSION" value="11"/>

	<classpath name="."/>
	<haxelib name="nme"/>

	<assets path="Assets" include="*"/>

	<ndll name="std"/>
	<ndll name="regexp"/>
	<ndll name="zlib"/>
	<ndll name="nme" haxelib="nme"/>
</project>
